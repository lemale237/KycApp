<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.authentication.login.LoginFragment">
    <ImageView
        android:layout_width="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/top_background"
        android:src="@drawable/ic_intersection"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintVertical_bias="0.8"
        android:backgroundTint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/top_background"
        android:background="@drawable/circular_shape"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="Register!"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/top_background"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="24dp"
        android:id="@+id/email_text"
        android:hint="Enter your Names"
        android:paddingHorizontal="16dp"
        android:textColor="@color/purple_500"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/rectangle_with_rounded_shape"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:hint="rock@email.com"
        android:id="@+id/password_text"
        android:drawableRight="@drawable/ic_baseline_alternate_email_24"
        android:paddingHorizontal="16dp"
        android:textColor="@color/purple_500"
        android:textColorHint="@color/purple_500"
        android:background="@drawable/rectangle_with_rounded_shape"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        tools:layout_editor_absoluteX="16dp" />
    <EditText
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/password_text"
        app:layout_constraintEnd_toEndOf="@id/password_text"
        android:layout_marginVertical="16dp"
        android:text="password"
        android:id="@+id/forgot_pass_btn"
        android:textSize="20sp"
        android:drawableRight="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rectangle_with_rounded_shape"
        android:textColor="@color/purple_500"
        android:layout_height="70dp"/>
    <EditText
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass_btn"
        app:layout_constraintEnd_toEndOf="@id/password_text"
        android:layout_marginVertical="16dp"
        android:text="confirm password"
        android:id="@+id/confirm_pass_txt"
        android:textSize="20sp"
        android:drawableRight="@drawable/ic_baseline_vpn_key_24"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/rectangle_with_rounded_shape"
        android:textColor="@color/purple_500"
        android:layout_height="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="150dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rectangle_with_rounded_shape"
        android:backgroundTint="@color/purple_500"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:src="@drawable/ic_baseline_arrow_right_alt_24"
        android:layout_height="60dp"
        app:tint="@color/white" />



</androidx.constraintlayout.widget.ConstraintLayout>